.products-slim-bg-1 {
  background-color: #f6f6f5;
  background-repeat: no-repeat;
  background-size: 1920px 700px;
  background-position: center;
  height: 700px;
  display: flex;
}

.products-slim-bg-1 .container {
  display: flex;
  justify-content: space-between;
}

.products-slim-back {
  font-size: 22px;
  display: flex;
  align-self: flex-end;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: -20px;
  opacity: 0.6;
}

.products-slim-back:hover {
  opacity: 1;
}

.products-slim-back:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-slim-back-alt:before,
.products-slim-back-alt:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret-white.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-slim-back-alt:before {
  margin-left: 0;
  margin-right: 10px;
}

.products-slim-back-alt:after {
  transform: rotate(180deg);
}

.products-slim-back-alt {
  font-size: 24px;
  display: flex;
  align-items: center;
  opacity: 0.6;
  justify-content: center;
  margin-top: 80px;
  color: #aaa;
}

.products-slim-back-alt:hover {
  opacity: 1;
}

.products-slim-image {
  align-self: flex-end;
  display: flex;
  flex-direction: column;
  margin-bottom: -50px;
  overflow: hidden;
  margin-right: -30px;
  padding-right: 30px;
}

@media (min-width: 1440px) {
  .products-slim-image {
    overflow: initial;
  }
}

.products-slim-image-1 {
  width: 520px;
  height: 706px;
  background-image: url(<%= image_path('products/slim/image-1.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
  margin-right: -68px;
}

.products-slim-content {
  padding-top: 90px;
}

.products-slim-subtitle {
  display: inline-block;
  white-space: nowrap;
  color: #535353;
  font-size: 28px;
  border: 1px solid #a0a0a0;
  border-radius: 10px;
  padding: 5px 25px;
  margin-bottom: 30px;
}

.products-slim-title {
  font-size: 52px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 30px;
}

.products-slim-description {
  width: 600px;
  font-size: 16px;
  color: #313131;
  white-space: pre-wrap;
  padding-bottom: 30px;
  margin-bottom: 30px;
  border-bottom: 1px solid #dcdcdc;
}

.products-slim-features {
  display: flex;
  align-items: center;
}

.products-slim-feature {
  display: block;
  width: 125px;
  border: 1px solid #959595;
  border-radius: 10px;
}

.products-slim-feature + .products-slim-feature {
  margin-left: 30px;
}

.products-slim-feature:before {
  content: '';
  display: block;
  width: 100%;
  height: 105px;
  background-size: 62px;
  background-repeat: no-repeat;
  background-position: center;
  border-bottom: 1px solid #959595;
}

.products-slim-feature:nth-child(1):before {
  background-image: url(<%= image_path('products/slim/item-1.png') %>);
}

.products-slim-feature:nth-child(2):before {
  background-image: url(<%= image_path('products/slim/item-2.png') %>);
}

.products-slim-feature:nth-child(3):before {
  background-image: url(<%= image_path('products/slim/item-3.png') %>);
}

.products-slim-feature:nth-child(4):before {
  background-image: url(<%= image_path('products/slim/item-4.png') %>);
}

.products-slim-feature-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #1b1b1b;
  padding: 8px 3px 0 3px;
  text-align: center;
}

.products-slim-feature-subtitle {
  display: block;
  font-size: 14px;
  color: #1b1b1b;
  padding: 0 3px 8px 3px;
  text-align: center;
}

.products-slim-bg-2 {
  background-color: #8db3f4;
  background-image: url(<%= image_path('products/slim/bg-2.png') %>);
  background-repeat: no-repeat;
  background-size: 1920px 418px;
  background-position: center;
  height: 418px;
  box-sizing: border-box;
  padding: 60px;
}

.products-slim-step-title-1 {
  font-size: 52px;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 20px;
}

.products-slim-step-title-2 {
  font-size: 26px;
  color: #fff;
  text-align: center;
  margin-bottom: 60px;
}

.products-slim-steps {
  display: flex;
  justify-content: center;
}

.products-slim-step {
  display: flex;
  align-items: center;
  border: 2px solid #fff;
  border-radius: 10px;
  width: 200px;
  overflow: hidden;
  position: relative;
}

.products-slim-step + .products-slim-step {
  margin-left: 80px;
}

.products-slim-step:before {
  content: '';
  display: block;
  flex: 0 0 100px;
  width: 100px;
  height: 100px;
  background-color: #fff;
  background-size: 80px;
  background-repeat: no-repeat;
  background-position: center;
  border-right: 2px solid #fff;
}

.products-slim-step:nth-child(1):before {
  background-image: url(<%= image_path('products/slim/icon-1.png') %>);
}

.products-slim-step:nth-child(2):before {
  background-image: url(<%= image_path('products/slim/icon-2.png') %>);
}

.products-slim-step:nth-child(3):before {
  background-image: url(<%= image_path('products/slim/icon-3.png') %>);
}

.products-slim-step:after {
  content: attr(data-count);
  display: block;
  background: #fff;
  width: 28px;
  height: 28px;
  font-size: 18px;
  font-weight: bold;
  color: #63c8f3;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  border-radius: 0 0 0 10px;
}

.products-slim-step-content {
  font-size: 20px;
  color: #fff;
  flex: 1 1;
  text-align: center;
}

.products-slim-bg-3 {
  height: 740px;
  background: linear-gradient(135deg, #111 0%, #4b4b4b 100%);
}

.products-slim-bg-3 .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.products-slim-main-titles {
  width: 650px;
}

.products-slim-main-title + .products-slim-main-title {
  border-top: 1px solid #434343;
  margin-top: 80px;
  padding-top: 80px;
}

.products-slim-main-title-1 {
  font-size: 36px;
  font-weight: bold;
  color: #c9c9c9;
  margin-bottom: 15px;
}

.products-slim-main-title-2 {
  font-size: 20px;
  color: #aaa;
  margin-bottom: 30px;
}

.products-slim-main-title-3 {
  font-size: 16px;
  color: #aaa;
}

.products-slim-image-2 {
  width: 424px;
  height: 740px;
  background-image: url(<%= image_path('products/slim/image-2.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-slim-bg-4 {
  height: 715px;
  background: #1c1a1d;
  padding-top: 90px;
  box-sizing: border-box;
}

.products-slim-specs-title {
  border-bottom: 1px solid #535353;
  border-right: 1px solid #535353;
  width: 100%;
  font-size: 30px;
  font-weight: bold;
  color: #c9c9c9;
  text-align: center;
  padding: 10px;
  box-sizing: border-box;
}

.products-slim-specs {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #535353;
  border-left: 1px solid #535353;
  width: 100%;
  margin: auto;
}

.products-slim-spec {
  flex: 0 0 20%;
  display: flex;
  border-bottom: 1px solid #535353;
  border-right: 1px solid #535353;
  flex-direction: column;
  height: 180px;
  padding-top: 60px;
  box-sizing: border-box;
}

.products-slim-spec-primary {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #c9c9c9;
  padding: 0 20px;
  margin-bottom: 10px;
}

.products-slim-spec-secondary {
  text-align: center;
  font-size: 18px;
  color: #aaa;
  padding: 0 20px;
}


@media (max-width: 767px) {
  .products-slim-bg-1 {
    height: auto;
    background-size: cover;
    padding: 30px 0;
  }

  .products-slim-bg-1 .container {
    flex-direction: column;
  }

  .products-slim-content {
    padding-top: 0;
    order: 1;
    margin: -30px;
    background: #fff;
    padding: 40px 30px;
  }

  .products-slim-image {
    align-self: auto;
    z-index: 1;
    margin-bottom: 0;
  }

  .products-slim-back {
    display: none;
  }

  .products-slim-image-1 {
    width: 100%;
    height: 0;
    padding-bottom: <%= 706.0 / 520 * 100 %>%;
    margin-right: 0;
    margin-left: 24px;
  }

  .products-slim-subtitle {
    font-size: 14px;
    padding: 5px 10px;
    border-radius: 6px;
    margin-bottom: 15px;
  }

  .products-slim-title {
    font-size: 26px;
    margin-bottom: 20px;
  }

  .products-slim-description {
    width: auto;
    font-size: 12px;
    line-height: 20px;
    border-bottom: 0;
    padding-bottom: 0;
    margin-bottom: 40px;
  }

  .products-slim-features {
    flex-wrap: wrap;
  }

  .products-slim-feature {
    width: calc(50% - 10px);
    box-sizing: border-box;
  }

  .products-slim-feature + .products-slim-feature {
    margin-left: 0;
  }

  .products-slim-feature:nth-child(2n - 1) + .products-slim-feature {
    margin-left: 20px;
  }

  .products-slim-feature:nth-child(n + 3) {
    margin-top: 20px;
  }

  .products-slim-feature:before {
    background-size: 40px;
    height: 80px;
  }

  .products-slim-feature-title {
    font-size: 10px;
  }

  .products-slim-feature-subtitle {
    font-size: 10px;
  }

  .products-slim-bg-2 {
    height: auto;
    background-size: cover;
  }

  .products-slim-step-title-1 {
    font-size: 26px;
    margin-bottom: 10px;
  }

  .products-slim-step-title-2 {
    font-size: 14px;
    margin-bottom: 40px;
  }

  .products-slim-steps {
    flex-direction: column;
  }

  .products-slim-step {
    width: auto;
  }

  .products-slim-step:before {
    flex: 0 0 80px;
    width: 80px;
    height: 80px;
    background-size: 60px;
  }

  .products-slim-step + .products-slim-step {
    margin-left: 0;
    margin-top: 40px;
  }

  .products-slim-bg-3 {
    height: auto;
  }

  .products-slim-bg-3 .container {
    flex-direction: column;
  }

  .products-slim-main-titles {
    width: auto;
    padding: 40px 0;
  }

  .products-slim-main-title-1 {
    font-size: 20px;
  }

  .products-slim-main-title-2 {
    font-size: 14px;
  }

  .products-slim-main-title-3 {
    font-size: 12px;
  }

  .products-slim-main-title + .products-slim-main-title {
    margin-top: 40px;
    padding-top: 40px;
  }

  .products-slim-image-2 {
    width: 100%;
    height: 0;
    padding-bottom: <%= 740.0 / 424 * 2 / 3 * 100 %>%;
    background-position: center;
  }

  .products-slim-bg-4 {
    height: auto;
    padding: 40px 0;
  }

  .products-slim-specs {
    width: 100%;
  }

  .products-slim-spec {
    flex: 0 0 50%;
    padding: 30px 0;
    height: auto;
  }

  .products-slim-specs-title {
    font-size: 16px;
  }

  .products-slim-spec-primary {
    font-size: 16px;
  }

  .products-slim-spec-secondary {
    font-size: 14px;
  }

  .products-slim-back-alt {
    font-size: 16px;
    margin-top: 40px;
  }

  .products-slim-back-alt:before,
  .products-slim-back-alt:after {
    width: 48px;
    height: 16px;
    background-size: 16px;
  }
}
