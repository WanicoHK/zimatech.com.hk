.products-plus-bg-1 {
  background-color: #ecf0f2;
  background-image: url(<%= image_path('products/plus/bg.png') %>);
  background-repeat: no-repeat;
  background-size: 1920px 700px;
  background-position: center;
  height: 700px;
  display: flex;
}

.products-plus-bg-1 .container {
  display: flex;
  justify-content: space-between;
}

.products-plus-back {
  font-size: 22px;
  display: flex;
  align-self: flex-end;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 40px;
  opacity: 0.6;
}

.products-plus-back:hover {
  opacity: 1;
}

.products-plus-back:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-plus-back-alt:before,
.products-plus-back-alt:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret-white.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-plus-back-alt:before {
  margin-left: 0;
  margin-right: 10px;
}

.products-plus-back-alt:after {
  transform: rotate(180deg);
}

.products-plus-back-alt {
  font-size: 24px;
  display: flex;
  align-items: center;
  opacity: 0.6;
  justify-content: center;
  margin-top: 80px;
  color: #aaa;
}

.products-plus-back-alt:hover {
  opacity: 1;
}

.products-plus-image {
  align-self: flex-end;
  display: flex;
  flex-direction: column;
}

.products-plus-image-1 {
  width: 559px;
  height: 543px;
  background-image: url(<%= image_path('products/plus/image-1.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-plus-content {
  padding-top: 90px;
}

.products-plus-subtitle {
  display: inline-block;
  white-space: nowrap;
  color: #535353;
  font-size: 28px;
  border: 1px solid #a0a0a0;
  border-radius: 10px;
  padding: 5px 25px;
  margin-bottom: 30px;
}

.products-plus-title {
  font-size: 52px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 30px;
}

.products-plus-description {
  width: 600px;
  font-size: 16px;
  color: #313131;
  white-space: pre-wrap;
  padding-bottom: 30px;
  margin-bottom: 30px;
  border-bottom: 1px solid #dcdcdc;
}

.products-plus-features {
  display: flex;
  align-items: center;
}

.products-plus-feature {
  display: block;
  width: 125px;
  border: 1px solid #959595;
  border-radius: 10px;
}

.products-plus-feature + .products-plus-feature {
  margin-left: 30px;
}

.products-plus-feature:before {
  content: '';
  display: block;
  width: 100%;
  height: 105px;
  background-size: 62px;
  background-repeat: no-repeat;
  background-position: center;
  border-bottom: 1px solid #959595;
}

.products-plus-feature:nth-child(1):before {
  background-image: url(<%= image_path('products/plus/item-1.png') %>);
}

.products-plus-feature:nth-child(2):before {
  background-image: url(<%= image_path('products/plus/item-2.png') %>);
}

.products-plus-feature:nth-child(3):before {
  background-image: url(<%= image_path('products/plus/item-3.png') %>);
}

.products-plus-feature:nth-child(4):before {
  background-image: url(<%= image_path('products/plus/item-4.png') %>);
}

.products-plus-feature-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #1b1b1b;
  padding: 8px 3px 0 3px;
  text-align: center;
}

.products-plus-feature-title-shrink {
  letter-spacing: -2px;
  white-space: nowrap;
}

.products-plus-feature-subtitle {
  display: block;
  font-size: 14px;
  color: #1b1b1b;
  padding: 0 3px 8px 3px;
  text-align: center;
}


.products-plus-bg-2 {
  height: 540px;
  background: linear-gradient(135deg, #6bccf6 0%, #b7cefc 100%);
  display: flex;
}

.products-plus-bg-2 .container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.products-plus-step {
  width: 585px;
  height: 364px;
  border-radius: 5px;
  background-color: #fff;
  background-size: contain;
  background-repeat: no-repeat;
  padding: 50px 65px;
  box-sizing: border-box;
}

.products-plus-step + .products-plus-step {
  margin-left: 30px;
}

.products-plus-step:nth-child(1) {
  background-image: url(<%= image_path('products/plus/bg-2.png') %>);
}

.products-plus-step:nth-child(2) {
  background-image: url(<%= image_path('products/plus/bg-3.png') %>);
}

.products-plus-step-1 {
  font-size: 40px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 10px;
}

.products-plus-step-2 {
  font-size: 18px;
  color: #434343;
  white-space: pre-wrap;
  line-height: 30px;
}

.products-plus-step-3 {
  font-size: 26px;
  color: #434343;
  margin-bottom: 20px;
}

.products-plus-step-4 {
  font-size: 16px;
  color: #434343;
  white-space: pre-wrap;
  margin-bottom: 20px;
  line-height: 30px;
}

.products-plus-step-5 {
  display: inline-block;
  font-size: 16px;
  color: #434343;
  border: 1px solid #b5b5b5;
  padding: 2px 10px;
  border-radius: 6px;
}


.products-plus-bg-3 {
  height: 740px;
  background: linear-gradient(135deg, #111 0%, #4b4b4b 100%);
}

.products-plus-bg-3 .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.products-plus-main-titles {
  width: 650px;
}

.products-plus-main-title + .products-plus-main-title {
  border-top: 1px solid #535353;
  margin-top: 100px;
  padding-top: 80px;
}

.products-plus-main-title-1 {
  font-size: 36px;
  font-weight: bold;
  color: #c9c9c9;
  margin-bottom: 15px;
}

.products-plus-main-title-2 {
  font-size: 20px;
  color: #aaa;
  margin-bottom: 30px;
}

.products-plus-main-title-3 {
  font-size: 16px;
  color: #aaa;
}

.products-plus-image-2 {
  width: 619px;
  height: 740px;
  background-image: url(<%= image_path('products/plus/image-2.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
}


.products-plus-bg-4 {
  height: 715px;
  background: #1c1a1d;
  padding-top: 90px;
  box-sizing: border-box;
}

.products-plus-specs-title {
  border-bottom: 1px solid #535353;
  border-right: 1px solid #535353;
  width: 100%;
  font-size: 30px;
  font-weight: bold;
  color: #c9c9c9;
  text-align: center;
  padding: 10px;
  box-sizing: border-box;
}

.products-plus-specs {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #535353;
  border-left: 1px solid #535353;
  width: 100%;
  margin: auto;
}

.products-plus-spec {
  flex: 0 0 20%;
  display: flex;
  border-bottom: 1px solid #535353;
  border-right: 1px solid #535353;
  flex-direction: column;
  height: 180px;
  padding-top: 60px;
  box-sizing: border-box;
}

.products-plus-spec-primary {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #c9c9c9;
  padding: 0 20px;
  margin-bottom: 10px;
}

.products-plus-spec-secondary {
  text-align: center;
  font-size: 18px;
  color: #aaa;
  padding: 0 20px;
}


@media (max-width: 767px) {
  .products-plus-bg-1 {
    height: auto;
    background-size: cover;
    padding: 60px 0 30px;
  }

  .products-plus-bg-1 .container {
    flex-direction: column;
  }

  .products-plus-content {
    padding-top: 0;
    order: 1;
    margin: -30px;
    background: #fff;
    padding: 40px 30px;
  }

  .products-plus-image {
    align-self: auto;
    margin-bottom: 30px;
  }

  .products-plus-back {
    display: none;
  }

  .products-plus-image-1 {
    width: 100%;
    height: 0;
    padding-bottom: <%= 543.0 / 559 * 100 %>%;
  }

  .products-plus-subtitle {
    font-size: 14px;
    padding: 5px 10px;
    border-radius: 6px;
    margin-bottom: 15px;
  }

  .products-plus-title {
    font-size: 26px;
    margin-bottom: 20px;
  }

  .products-plus-description {
    width: auto;
    font-size: 12px;
    line-height: 20px;
    border-bottom: 0;
    padding-bottom: 0;
    margin-bottom: 40px;
  }

  .products-plus-features {
    flex-wrap: wrap;
  }

  .products-plus-feature {
    width: calc(50% - 10px);
    box-sizing: border-box;
  }

  .products-plus-feature + .products-plus-feature {
    margin-left: 0;
  }

  .products-plus-feature:nth-child(2n - 1) + .products-plus-feature {
    margin-left: 20px;
  }

  .products-plus-feature:nth-child(n + 3) {
    margin-top: 20px;
  }

  .products-plus-feature:before {
    background-size: 40px;
    height: 80px;
  }

  .products-plus-feature-title {
    font-size: 10px;
  }

  .products-plus-feature-subtitle {
    font-size: 10px;
  }

  .products-plus-bg-2 {
    height: auto;
    padding: 30px 0;
  }

  .products-plus-bg-2 .container {
    flex-direction: column;
  }

  .products-plus-step {
    width: 100%;
    height: auto;
    padding: 30px;
  }

  .products-plus-step + .products-plus-step {
    margin-left: 0;
    margin-top: 20px;
  }

  .products-plus-step-1 {
    font-size: 20px;
  }

  .products-plus-step-2 {
    font-size: 14px;
    line-height: 28px;
  }

  .products-plus-step-3 {
    font-size: 14px;
    margin-bottom: 10px;
  }

  .products-plus-step-4 {
    font-size: 14px;
    line-height: 28px;
  }

  .products-plus-step-5 {
    font-size: 14px;
  }

  .products-plus-bg-3 {
    height: auto;
  }

  .products-plus-bg-3 .container {
    flex-direction: column;
  }

  .products-plus-main-titles {
    width: 100%;
    padding: 40px 0;
  }

  .products-plus-main-title-1 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .products-plus-main-title-2 {
    font-size: 18px;
    margin-bottom: 20px;
  }

  .products-plus-main-title-3 {
    font-size: 14px;
  }

  .products-plus-main-title + .products-plus-main-title {
    margin-top: 35px;
    padding-top: 35px;
  }

  .products-plus-image-2 {
    width: 100%;
    height: 0;
    padding-bottom: <%= 740.0 / 619 * 100 %>%;
  }

  .products-plus-bg-4 {
    height: auto;
    padding: 40px 0;
  }

  .products-plus-specs {
    width: 100%;
  }

  .products-plus-spec {
    flex: 0 0 50%;
    padding: 30px 0;
    height: auto;
  }

  .products-plus-specs-title {
    font-size: 16px;
  }

  .products-plus-spec-primary {
    font-size: 16px;
  }

  .products-plus-spec-secondary {
    font-size: 14px;
  }

  .products-plus-back-alt {
    font-size: 16px;
    margin-top: 40px;
  }

  .products-plus-back-alt:before,
  .products-plus-back-alt:after {
    width: 48px;
    height: 16px;
    background-size: 16px;
  }
}
