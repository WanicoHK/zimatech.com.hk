.products-masky-bg-1 {
  height: 574px;
  display: flex;
}

.products-masky-bg-1 .container {
  display: flex;
  justify-content: space-between;
}

.products-masky-content {
  padding-top: 90px;
}

.products-masky-subtitle {
  display: inline-block;
  white-space: nowrap;
  color: #535353;
  font-size: 28px;
  border: 1px solid #a0a0a0;
  border-radius: 10px;
  padding: 5px 25px;
  margin-bottom: 30px;
}

.products-masky-title {
  font-size: 52px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 5px;
}

.products-masky-description {
  width: 600px;
  font-size: 18px;
  font-weight: bold;
  color: #313131;
  white-space: pre-wrap;
  margin-bottom: 20px;
}

.products-masky-features {
  display: flex;
  flex-direction: column;
}

.products-masky-feature {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 5px 0;
}

.products-masky-feature-icon {
  width: 6px;
  height: 6px;
  background-color: #63c8f3;
  border-radius: 3px;
}

.products-masky-feature-content {
  color: #2c2c2c;
  font-size: 15px;
  margin-left: 5px;
  margin-right: 10px;
}

.products-masky-image {
  display: flex;
  flex-direction: column;
  align-self: flex-end;
  margin-bottom: -50px;
  z-index: 1;
}

.products-masky-image-1 {
  width: 522px;
  height: 557px;
  background-image: url(<%=image_path('products/masky/image-1.png')%>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-masky-bg-2 {
  background: linear-gradient(90deg, #3fb2e0, #8bb3f3);
  padding: 102px 0px;
}

.products-masky-bg-2-inner {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 30px;
}

.products-masky-prop {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10px 0;
}

.products-masky-prop-lines {
  width: 15vw;
  display: flex;
  flex-direction: column;
  margin-left: 20px;
}

.products-masky-prop-line {
  margin: 3px 10px;
  color: #fff;
  font-size: 18px;
  line-height: 25px;
}

.products-masky-prop-icon {
  height: 144px;
  width: 160px;
  border-top-right-radius: 12px;
  border-bottom-right-radius: 12px;
  background-repeat: no-repeat;
  background-size: contain;
}

<% (1..6).each do |i| %>
.products-masky-prop-icon-<%= i %> {
  background-image: url(<%=image_path("products/masky/prop-icon-#{i}.png")%>);
}
<% end %>

.products-masky-bg-3 .container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 50px;
  margin-bottom: 50px;
}

.products-masky-spec {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.products-masky-spec-icon {
  height: 202px;
  width: 202px;
  background-repeat: no-repeat;
  background-size: contain;
  margin-bottom: 5px;
}

<% (1..3).each do |i| %>
.products-masky-spec-icon-<%= i %> {
  background-image: url(<%=image_path("products/masky/spec-icon-#{i}.png")%>);
}
<% end %>

.products-masky-spec-lines {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.products-masky-spec-lines {
  font-size: 18px;
  font-weight: bold;
  margin: 5px 0;
}

.products-masky-spec-line {
  text-align: center;
}

.products-masky-spec-lines-2 .products-masky-spec-line:not(:nth-child(1)),
.products-masky-spec-lines-3 .products-masky-spec-line:not(:nth-child(1)) {
  color: #6b6b6b;
  font-size: 15px;
  font-weight: normal;
  margin: 3px 0;
}

.products-masky-bg-4 {
  background: #000;
}

.products-masky-bg-4-inner {
  display: flex;
  flex-direction: row;
  justify-content: center;
  max-width: 1440px;
  min-width: 1440px;
  margin: 0 auto;
}

.products-masky-scenes {
  display: flex;
  flex-direction: column;
  width: 464px;
  height: 614px;
}

.products-masky-scene {
  background-repeat: no-repeat;
  background-size: contain;
}

<% [1, 2, 5, 6].each do |i| %>
.products-masky-scene-<%= i %> {
  height: 50%;
  background-image: url(<%=image_path("products/masky/scene-#{i}.png")%>);
}
<% end %>

<% [3, 4].each do |i| %>
.products-masky-scene-<%= i %> {
  height: 200px;
  background-image: url(<%=image_path("products/masky/scene-#{i}.png")%>);
}
<% end %>

.products-masky-scene-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, #3fb2e0, #8bb3f3);
}

.products-masky-scene-text-line {
  color: #fff;
  font-size: 15px;
  line-height: 25px;
  margin: 0px 20px;
  text-align: center;
}

.products-masky-type-title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 70px;
  font-size: 40px;
  font-weight: bold;
  text-align: center;
}

.products-masky-types {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.products-masky-types-col {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.products-masky-type {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.products-masky-type-icon {
  background-repeat: no-repeat;
  background-size: contain;
}

<% (1..6).each do |i| %>
.products-masky-type-icon-<%= i %> {
  width: 362px;
  height: 476px;
  background-image: url(<%=image_path("products/masky/type-#{i}.png")%>);
}
<% end %>

.products-masky-type-lines {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 15px;
  font-weight: bold;
  margin-top: 20px;
}

.products-masky-type-line {
  text-align: center;
}

.products-masky-back {
  font-size: 24px;
  display: flex;
  align-items: center;
  opacity: 0.6;
  justify-content: center;
  margin-top: 80px;
  margin-bottom: 80px;
}

.products-masky-back:hover {
  opacity: 1;
}

.products-masky-back:before,
.products-masky-back:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-masky-back:before {
  margin-left: 0;
  margin-right: 10px;
}

.products-masky-back:after {
  transform: rotate(180deg);
}

@media (max-width: 767px) {
  .products-masky-bg-1 {
    height: auto;
  }

  .products-masky-bg-1 .container {
    flex-direction: column;
  }

  .products-masky-content {
    order: 1;
    background: #fff;
    padding-top: 80px;
  }

  .products-masky-image {
    align-self: auto;
  }

  .products-masky-image-1 {
    width: 100%;
    height: 0;
    background-position: center;
    padding-bottom: <%= 557.0 / 522 * 100 %>%;
  }

  .products-masky-subtitle {
    font-size: 14px;
    padding: 5px 10px;
    border-radius: 6px;
    margin-bottom: 15px;
  }

  .products-masky-title {
    font-size: 26px;
    margin-bottom: 20px;
  }

  .products-masky-description {
    width: auto;
    font-size: 15px;
    line-height: 20px;
    border-bottom: 0;
    padding-bottom: 0;
    margin-bottom: 0;
  }

  .products-masky-features {
    flex-wrap: wrap;
  }

  .products-masky-feature {
    width: 100%;
    box-sizing: border-box;
  }

  .products-masky-bg-2 {
    padding: 20px 0;
  }

  .products-masky-bg-2-inner {
    flex-direction: column;
    flex-wrap: nowrap;
    margin:0;
    padding: 0 30px;
  }

  .products-masky-prop-icon {
    height: <%= 144.0/1.5 %>px;
    width: <%= 160.0/1.5 %>px;
    border-top-right-radius: <%= 12/1.5 %>px;
    border-bottom-right-radius: <%= 12/1.5 %>px;
  }

  .products-masky-prop-lines {
    flex-grow: 1;
    flex-shrink: 1;
  }

  .products-masky-prop-line {
    font-size: 15px;
  }

  .products-masky-bg-3 .container {
    flex-direction: column;
    flex-wrap: nowrap;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .products-masky-spec {
    flex-direction: row;
    align-items: center;
  }

  .products-masky-spec + .products-masky-spec {
    margin-top: 10px;
  }

  .products-masky-spec-icon {
    width: 100px;
    height: 100px;
    margin-bottom: 0;
  }

  .products-masky-spec-lines {
    width: 15vw;
    flex-grow: 1;
    flex-shrink: 1;
    margin: 0 20px;
    text-align: center;
    font-size: 15px;
  }

  .products-masky-bg-4-inner {
    min-width: unset;
    max-width: none;
    flex-direction: column;
  }

  .products-masky-scenes {
    width: 100vw;
    height: calc(100vw*614.0/464.0);
  }

  .products-masky-scene {
    background-size: cover;
    background-position: center;
  }

  .products-masky-scene-text {
    width: 100vw;
    height: calc(100vw*214.0/464.0);
  }

  .products-masky-type-title {
    font-size: 26px;
    padding: 20px 20px 0 20px;
  }

  .products-masky-types {
    flex-direction: column;
  }

  .products-masky-back {
    font-size: 16px;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .products-masky-back:before,
  .products-masky-back:after {
    width: 48px;
    height: 16px;
    background-size: 16px;
  }
}
