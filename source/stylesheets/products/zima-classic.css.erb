.products-classic-bg-1 {
  height: 574px;
  display: flex;
}

.products-classic-bg-1 .container {
  display: flex;
  justify-content: space-between;
}

.products-classic-content {
  padding-top: 90px;
}

.products-classic-subtitle {
  display: inline-block;
  white-space: nowrap;
  color: #535353;
  font-size: 28px;
  border: 1px solid #a0a0a0;
  border-radius: 10px;
  padding: 5px 25px;
  margin-bottom: 30px;
}

.products-classic-title {
  font-size: 52px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 5px;
}

.products-classic-description {
  width: 600px;
  font-size: 18px;
  font-weight: bold;
  color: #313131;
  white-space: pre-wrap;
  margin-bottom: 20px;
}

.products-classic-features {
  display: flex;
  flex-direction: column;
}

.products-classic-feature {
  display: flex;
  flex-direction: row;
  margin: 5px 0;
}

.products-classic-feature-icon {
  margin-top: 7px;
  width: 6px;
  height: 6px;
  background-color: #63c8f3;
  border-radius: 3px;
}

.products-classic-feature-icon-2 {
  opacity: 0;
}

.products-classic-feature-content {
  color: #2c2c2c;
  font-size: 15px;
  line-height: 20px;
  margin-left: 5px;
}

.products-classic-feature-content-2 {
  opacity: 0.6;
}

.products-classic-image {
  display: flex;
  flex-direction: column;
  align-self: flex-end;
  margin-bottom: -50px;
  z-index: 1;
}

.products-classic-image-1 {
  width: 522px;
  height: 557px;
  background-image: url(<%=image_path('products/classic/image-1.png')%>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-classic-bg-2 {
  background: linear-gradient(90deg, #3fb2e0, #8bb3f3);
  padding: 102px 0px;
}

.products-classic-bg-2-inner {
  display: flex;
  justify-content: space-between;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 30px;
}

.products-classic-prop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.products-classic-prop-lines {
  width: 20vw;
  display: flex;
  flex-direction: column;
  margin-left: 20px;
}

.products-classic-prop-line {
  margin: 3px 10px;
  color: #fff;
  font-size: 18px;
  line-height: 25px;
}

.products-classic-prop-icon {
  height: 137px;
  width: 137px;
  background-repeat: no-repeat;
  background-size: contain;
}

<% (1..3).each do |i| %>
.products-classic-prop-icon-<%= i %> {
  background-image: url(<%=image_path("products/classic/prop-icon-#{i}.png")%>);
}
<% end %>

.products-classic-bg-3 .container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 70px;
  margin-bottom: 70px;
}

.products-classic-spec {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px 0;
}

.products-classic-spec-icon {
  height: 202px;
  width: 202px;
  background-repeat: no-repeat;
  background-size: contain;
  margin-bottom: 5px;
}

<% (1..6).each do |i| %>
.products-classic-spec-icon-<%= i %> {
  background-image: url(<%=image_path("products/classic/spec-icon-#{i}.png")%>);
}
<% end %>

.products-classic-spec-lines {
  width: 30vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.products-classic-spec-line {
  text-align: center;
}

.products-classic-spec-lines-1,
.products-classic-spec-lines-2,
.products-classic-spec-lines-3 {
  font-size: 18px;
  font-weight: bold;
  line-height: 30px;
}

.products-classic-spec-lines-4,
.products-classic-spec-lines-5,
.products-classic-spec-lines-6 {
  color: #6b6b6b;
  font-size: 15px;
  line-height: 20px;
}

.products-classic-spec-lines-4 .products-classic-spec-line:nth-child(1),
.products-classic-spec-lines-5 .products-classic-spec-line:nth-child(1),
.products-classic-spec-lines-6 .products-classic-spec-line:nth-child(1) {
  color: #000;
  font-size: 18px;
  font-weight: bold;
  line-height: 30px;
}

.products-classic-bg-4 {
  background: #000;
}

.products-classic-bg-4-inner {
  display: flex;
  flex-direction: row;
  justify-content: center;
  max-width: 1440px;
  min-width: 1440px;
  margin: 0 auto;
}

.products-classic-scenes {
  display: flex;
  flex-direction: column;
  width: 464px;
  height: 614px;
}

.products-classic-scene {
  background-repeat: no-repeat;
  background-size: contain;
}

<% [1, 2, 5, 6].each do |i| %>
.products-classic-scene-<%= i %> {
  height: 50%;
  background-image: url(<%=image_path("products/classic/scene-#{i}.png")%>);
}
<% end %>

<% [3, 4].each do |i| %>
.products-classic-scene-<%= i %> {
  height: 200px;
  background-image: url(<%=image_path("products/classic/scene-#{i}.png")%>);
}
<% end %>

.products-classic-scene-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, #3fb2e0, #8bb3f3);
}

.products-classic-scene-text-line {
  color: #fff;
  font-size: 15px;
  line-height: 25px;
  margin: 0px 20px;
  text-align: center;
}

.products-classic-type-title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 70px;
  font-size: 52px;
  font-weight: bold;
  text-align: center;
}

.products-classic-types {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.products-classic-type {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.products-classic-type-icon {
  background-repeat: no-repeat;
  background-size: contain;
}

<% (1..4).each do |i| %>
.products-classic-type-icon-<%= i %> {
  width: 330px;
  height: 436px;
  background-image: url(<%=image_path("products/classic/type-#{i}.png")%>);
}
<% end %>

.products-classic-type-lines {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 15px;
  font-weight: bold;
  margin-top: 20px;
  text-align: center;
}

.products-classic-back {
  font-size: 24px;
  display: flex;
  align-items: center;
  opacity: 0.6;
  justify-content: center;
  margin-top: 80px;
  margin-bottom: 80px;
}

.products-classic-back:hover {
  opacity: 1;
}

.products-classic-back:before,
.products-classic-back:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-classic-back:before {
  margin-left: 0;
  margin-right: 10px;
}

.products-classic-back:after {
  transform: rotate(180deg);
}


@media (max-width: 767px) {
  .products-classic-bg-1 {
    height: auto;
  }

  .products-classic-bg-1 .container {
    flex-direction: column;
  }

  .products-classic-content {
    order: 1;
    background: #fff;
    padding-top: 80px;
  }

  .products-classic-image {
    align-self: auto;
  }

  .products-classic-image-1 {
    width: 100%;
    height: 0;
    padding-bottom: <%= 557.0 / 522 * 100 %>%;
  }

  .products-classic-subtitle {
    font-size: 14px;
    padding: 5px 10px;
    border-radius: 6px;
    margin-bottom: 15px;
  }

  .products-classic-title {
    font-size: 26px;
    margin-bottom: 20px;
  }

  .products-classic-description {
    width: auto;
    font-size: 15px;
    line-height: 20px;
    border-bottom: 0;
    padding-bottom: 0;
    margin-bottom: 0;
  }

  .products-classic-features {
    flex-wrap: wrap;
  }

  .products-classic-feature {
    width: 100%;
    box-sizing: border-box;
  }

  .products-classic-bg-2 {
    padding: 20px 0px;
  }

  .products-classic-bg-2-inner {
    flex-direction: column;
    margin:0;
    padding: 0 30px;
  }

  .products-classic-prop {
    margin: 10px 0;
  }

  .products-classic-prop-icon {
    width: <%= 137.0 / 2.0 %>px;
    height: <%= 137.0 / 2.0 %>px;
  }

  .products-classic-prop-lines {
    flex-grow: 1;
    flex-shrink: 1;
  }

  .products-classic-prop-line {
    font-size: 15px;
  }

  .products-classic-bg-3 .container {
    flex-direction: column;
    flex-wrap: nowrap;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .products-classic-spec {
    flex-direction: row;
    align-items: center;
  }

  .products-classic-spec + .products-classic-spec {
    margin-top: 10px;
  }

  .products-classic-spec-icon {
    width: 100px;
    height: 100px;
    margin-bottom: 0;
  }

  .products-classic-spec-lines {
    width: 15vw;
    flex-grow: 1;
    flex-shrink: 1;
    margin: 0 20px;
    text-align: center;
    font-size: 15px;
  }

  .products-classic-bg-4-inner {
    min-width: unset;
    max-width: none;
    flex-direction: column;
  }

  .products-classic-scenes {
    width: 100vw;
    height: calc(100vw*614/464);
  }

  .products-classic-scene {
    background-size: cover;
    background-position: center;
  }

  .products-classic-scene-text {
    width: 100vw;
    height: calc(100vw*214/464);
  }

  .products-classic-type-title {
    font-size: 26px;
    padding: 20px 20px 0 20px;
  }

  .products-classic-types {
    flex-direction: column;
  }

  .products-classic-back {
    font-size: 16px;
    margin-top: 40px;
    margin-bottom: 40px;
  }

  .products-classic-back:before,
  .products-classic-back:after {
    width: 48px;
    height: 16px;
    background-size: 16px;
  }
}
