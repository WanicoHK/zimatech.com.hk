.products-pro-bg-1 {
  background-color: #ecf0f2;
  background-image: url(<%= image_path('products/pro/bg.png') %>);
  background-repeat: no-repeat;
  background-size: 1920px 700px;
  background-position: center;
  height: 700px;
  display: flex;
}

.products-pro-bg-1 .container {
  display: flex;
  justify-content: space-between;
}

.products-pro-back {
  font-size: 22px;
  display: flex;
  align-self: flex-end;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 40px;
  opacity: 0.6;
}

.products-pro-back:hover {
  opacity: 1;
}

.products-pro-back:after,
.products-pro-back-alt:before,
.products-pro-back-alt:after {
  content: '';
  display: block;
  width: 75px;
  height: 25px;
  background-image: url(<%= asset_data_uri('images/right-caret.svg') %>);
  background-size: 25px;
  background-position: left;
  margin-left: 10px;
  opacity: 0.7;
}

.products-pro-back-alt:before {
  margin-left: 0;
  margin-right: 10px;
}

.products-pro-back-alt:after {
  transform: rotate(180deg);
}

.products-pro-back-alt {
  font-size: 24px;
  display: flex;
  align-items: center;
  opacity: 0.6;
  justify-content: center;
  margin-top: 80px;
}

.products-pro-back-alt:hover {
  opacity: 1;
}

.products-pro-image {
  align-self: flex-end;
  display: flex;
  flex-direction: column;
}

.products-pro-image-1 {
  width: 522px;
  height: 557px;
  background-image: url(<%= image_path('products/pro/image-1.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-pro-content {
  padding-top: 90px;
}

.products-pro-subtitle {
  display: inline-block;
  white-space: nowrap;
  color: #535353;
  font-size: 28px;
  border: 1px solid #a0a0a0;
  border-radius: 10px;
  padding: 5px 25px;
  margin-bottom: 30px;
}

.products-pro-title {
  font-size: 52px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 30px;
}

.products-pro-description {
  width: 600px;
  font-size: 16px;
  color: #313131;
  white-space: pre-wrap;
  padding-bottom: 30px;
  margin-bottom: 30px;
  border-bottom: 1px solid #dcdcdc;
}

.products-pro-features {
  display: flex;
  align-items: center;
}

.products-pro-feature {
  display: block;
  width: 125px;
  border: 1px solid #959595;
  border-radius: 10px;
}

.products-pro-feature + .products-pro-feature {
  margin-left: 30px;
}

.products-pro-feature:before {
  content: '';
  display: block;
  width: 100%;
  height: 105px;
  background-size: 62px;
  background-repeat: no-repeat;
  background-position: center;
  border-bottom: 1px solid #959595;
}

.products-pro-feature:nth-child(1):before {
  background-image: url(<%= image_path('products/pro/item-1.png') %>);
}

.products-pro-feature:nth-child(2):before {
  background-image: url(<%= image_path('products/pro/item-2.png') %>);
}

.products-pro-feature:nth-child(3):before {
  background-image: url(<%= image_path('products/pro/item-3.png') %>);
}

.products-pro-feature:nth-child(4):before {
  background-image: url(<%= image_path('products/pro/item-4.png') %>);
}

.products-pro-feature-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #1b1b1b;
  padding: 8px 3px 0 3px;
  text-align: center;
}

.products-pro-feature-subtitle {
  display: block;
  font-size: 14px;
  color: #1b1b1b;
  padding: 0 3px 8px 3px;
  text-align: center;
}


.products-pro-bg-2 {
  height: 740px;
  background: #fff;
  background: linear-gradient(to right, #f0f9fc 0%, #fafafa 100%);
}

.products-pro-bg-2 .container {
  display: flex;
  justify-content: space-between;
}

.products-pro-image-2 {
  width: 518px;
  height: 740px;
  background-image: url(<%= image_path('products/pro/image-2.png') %>);
  background-repeat: no-repeat;
  background-size: contain;
}

.products-pro-lines {
  width: 560px;
  padding-top: 60px;
}

.products-pro-line + .products-pro-line {
  margin-top: 60px;
}

.products-pro-line-primary {
  font-size: 30px;
  font-weight: bold;
  color: #313131;
  margin-bottom: 20px;
}

.products-pro-line-secondary {
  font-size: 16px;
  color: #434343;
  white-space: pre-wrap;
  line-height: 28px;
}


.products-pro-bg-3 {
  height: 715px;
  background: #f9fdff;
  padding-top: 90px;
  box-sizing: border-box;
}

.products-pro-specs-title {
  border-bottom: 1px solid #dadcdf;
  border-right: 1px solid #dadcdf;
  width: 1200px;
  font-size: 30px;
  font-weight: bold;
  color: #1b1b1b;
  text-align: center;
  padding: 10px;
  box-sizing: border-box;
}

.products-pro-specs {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #dadcdf;
  border-left: 1px solid #dadcdf;
  width: 1200px;
  margin: auto;
}

.products-pro-spec {
  flex: 0 0 20%;
  display: flex;
  border-bottom: 1px solid #dadcdf;
  border-right: 1px solid #dadcdf;
  flex-direction: column;
  height: 180px;
  padding-top: 60px;
  box-sizing: border-box;
}

.products-pro-spec-primary {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #313131;
  padding: 0 20px;
  margin-bottom: 10px;
}

.products-pro-spec-secondary {
  text-align: center;
  font-size: 18px;
  color: #626262;
  padding: 0 20px;
}
