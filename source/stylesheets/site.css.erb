html {
  background: #2a2e3f;
  font-family: system,-apple-system,".SFNSText-Regular","San Francisco",Roboto,"Segoe UI","Helvetica Neue","Lucida Grande",sans-serif;
  height: 100%;
}

body {
  padding: 0;
  margin: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}

a {
  color: #333;
  text-decoration: none;
}

.container {
  max-width: 1440px;
  margin: 0 auto;
  width: 100%;
  padding: 0 30px;
  box-sizing: border-box;
}

.main {
  flex: 1 1;
}

.header {
  background: #fff;
}

.header .container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  display: block;
  width: 160px;
  height: 32px;
  background-repeat: no-repeat;
  background-size: contain;
  background-image: url(<%= image_path('logo.png') %>);
  font-size: 0;
}

.nav {
  display: flex;
  align-items: center;
}

.nav a {
  display: flex;
  height: 64px;
  align-items: center;
  padding: 15px;
  box-sizing: border-box;
}

.nav a:hover {
  color: #63c8f3;
}

.footer {
  background: #181a24;
  padding: 50px 0;
}

.footer .container {
  display: flex;
}

.footer-title {
  font-size: 18px;
  color: #cacaca;
  margin-bottom: 15px;
}

.app-store {
  width: 124px;
  height: 54px;
  background-image: url(<%= asset_data_uri('images/app-store.svg') %>);
  background-size: 140px 36px;
  background-repeat: no-repeat;
  background-position: center;
}

.google-play {
  width: 140px;
  height: 54px;
  background-image: url(<%= asset_data_uri('images/google-play.png') %>);
  background-repeat: no-repeat;
  background-size: 140px 54px;
}

.download-apk {
  width: 140px;
  height: 54px;
  background-image: url(<%= asset_data_uri('images/download-apk.png') %>);
  background-repeat: no-repeat;
  background-size: 140px 54px;
}

.footer-app-links {
  margin-left: -10px;
}

.footer-app-link {
  display: block;
  font-size: 0;
}

.footer-app-link.app-store {
  width: 140px;
  height: 60px;
  background-size: 140px 41px;
}

.footer-nav {
  width: 300px;
  margin-left: auto;
}

.footer-nav-links {
  line-height: 50px;
}

.footer-nav-links a {
  display: block;
  color: #eee;
}

.footer-nav-links a:hover {
  color: #fff;
}

.footer-contact {
  width: 350px;
}

.footer-content {
  color: #fff;
  white-space: pre-wrap;
  line-height: 50px;
}
