body {
  font-family: system,-apple-system,".SFNSText-Regular","San Francisco",Roboto,"Segoe UI","Helvetica Neue","Lucida Grande",sans-serif;
  margin: 0;
  padding: 0;
}

img {
  display: block;
  width: 100%;
}

form {
  padding: 3rem 1.5rem;
  max-width: 500px;
  margin: auto;
  box-sizing: border-box;
}

form img {
  margin-bottom: 2rem;
}

.row {
  position: relative;
  margin-bottom: 2rem;
}

label {
  position: absolute;
  top: 0;
  left: 1rem;
  bottom: 0;
  display: flex;
  align-items: center;
  font-size: 1.2rem;
  color: #333;
}

input,
select {
  font-size: 1.2rem;
  border-radius: 2rem;
  border: 1px solid #ccc;
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 0.5rem 1rem 0.5rem 8rem;
  outline: 0;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

input:focus,
select:focus {
  border-color: #184a98;
}

input:focus + label,
select:focus + label {
  color: #184a98;
}

select {
  background: #fff url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='4' height='5' viewBox='0 0 4 5'%3e%3cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3e%3c/svg%3e") no-repeat right .75rem center/8px 10px;
}

button {
  box-sizing: border-box;
  width: 100%;
  background: linear-gradient(294deg, #3e4ef8 0%, #367cff 100%);
  box-shadow: 0 8px 28px 0 #b8bfe8;
  border: 0;
  border-radius: 58px;
  font-size: 1.2rem;
  line-height: 1.5rem;
  padding: 0.5rem;
  width: 100%;
  color: #fff;
  outline: 0;
}

button[disabled] {
  background: #eaeaea;
  box-shadow: 0 8px 28px 0 #eee;
  color: #aaa;
}

#qrcode {
  display: none;
}

@media (min-width: 813px) {
  body {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .page {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: auto;
    border-radius: 40px;
  }

  .iphone-x {
    position: relative;
    margin: 40px 0;
    width: 360px;
    height: 780px;
    border-radius: 40px;
    box-shadow: 0px 0px 0px 11px #1f1f1f, 0px 0px 0px 13px #191919, 0px 0px 0px 20px #111;
  }

  .iphone-x:before, .iphone-x:after {
    content: '';
    position: absolute;
    z-index: 1;
    left: 50%;
    transform: translateX(-50%);
  }

  .iphone-x:after {
    bottom: 7px;
    width: 140px;
    height: 4px;
    background-color: #f2f2f2;
    border-radius: 10px;
  }

  .iphone-x:before {
    top: 0px;
    width: 56%;
    height: 30px;
    background-color: #1f1f1f;
    border-radius: 0px 0px 40px 40px;
  }

  .iphone-x i,
  .iphone-x b {
    position: absolute;
    z-index: 2;
    display: block;
    color: transparent;
  }

  .iphone-x i {
    top: 0px;
    left: 50%;
    transform: translate(-50%, 6px);
    height: 8px;
    width: 15%;
    background-color: #101010;
    border-radius: 8px;
    box-shadow: inset 0px -3px 3px 0px rgba(255, 255, 255, 0.2);
  }

  .iphone-x b {
    left: 10%;
    top: 0px;
    transform: translate(180px, 4px);
    width: 12px;
    height: 12px;
    background-color: #101010;
    border-radius: 12px;
    box-shadow: inset 0px -3px 2px 0px rgba(255, 255, 255, 0.2);
  }

  .iphone-x b:after {
    content: '';
    position: absolute;
    background-color: #2d4d76;
    width: 6px;
    height: 6px;
    top: 2px;
    left: 2px;
    top: 3px;
    left: 3px;
    display: block;
    border-radius: 4px;
    box-shadow: inset 0px -2px 2px rgba(0, 0, 0, 0.5);
  }

  #qrcode {
    display: block;
    position: fixed;
    top: 0;
    right: 0;
  }
}
