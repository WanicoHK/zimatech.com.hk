.flex {
  display: flex;
  display: -webkit-flex;
}
.justify-center {
  justify-content: center;
  -webkit-justify-content: center;
}
.justify-between {
  justify-content: space-between;
  -webkit-justify-content: space-between;
}
.justify-around {
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.justify-end {
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
}
.items-start {
  align-items: flex-start;
  -webkit-align-items: flex-start;
}
.items-center {
  align-items: center;
  -webkit-align-items: center;
}
.items-between {
  align-items: space-between;
  -webkit-align-items: space-between;
}
.items-end {
  align-items: flex-end;
  -webkit-align-items: flex-end;
}
.direction-column {
  flex-direction: column;
  -webkit-flex-direction: column;
}
.direction-col-rever {
  flex-direction: column-reverse;
  -webkit-flex-direction: column-reverse;
}
.flex-wrap {
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
}
.width100 {
  width: 100%;
}
.height100 {
  height: 100%;
}
.dis-none {
  display: none;
}
.dis-block {
  display: block;
}
.dis-inline {
  display: inline;
}
.dis-inline-block {
  display: inline-block;
}
.text-center {
  text-align: center;
}
.text-left {
  text-align: left;
}

.pointer {
  cursor: pointer;
}

.vertical-m {
  vertical-align: middle;
}
.public-bg-style {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}
.public-bg-contain-style {
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center center;
}
.public-bg-normal-style {
  background-position: center center;
  background-repeat: no-repeat;
}
.contain-box {
  max-width: 1440px;
  margin: 0 auto;
  width: 100%;
}
@media screen and (max-width: 959px) {
  .contain-box {
    width: 92%;
  }
}
@media screen and (min-width: 960px) and (max-width: 1440px) {
  .contain-box {
    padding: 0 20px;
  }
}

.small-contain-box {
  max-width: 1024px;
  margin: 0 auto;
  width: 100%;
}
@media screen and (max-width: 959px) {
  .small-contain-box {
    width: 92%;
  }
}
@media screen and (min-width: 960px) and (max-width: 1023px) {
  .small-contain-box {
    padding: 0 20px;
  }
}

.relative {
  position: relative;
}

@media screen and (min-width: 320px) and (max-width: 374px){
  html {
    font-size: 42.66666667px;
  }
}
@media screen and (min-width: 375px) and (max-width: 392px){
  html {
    font-size: 50px;
  }
}
@media screen and (min-width: 393px) and (max-width: 414px){
  html {
    font-size: 52.4px;
  }
}
@media screen and (min-width: 415px) and (max-width: 959px){
  html {
    font-size: 55.33333333px;
  }
}

@media screen and (min-width: 960px) {
  html {
    font-size: 50px !important;
  }
}


@media screen and (min-width: 960px) {
  .public-mobile-style {
    display: none !important;
  }
}
@media screen and (max-width: 959px) {
  .public-pc-style {
    display: none !important;
  }
}
