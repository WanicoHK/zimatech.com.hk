.contact-bg-1-main {
  background-color: #3e4460;
}

.contact-bg-1-container {
  max-width: 1920px;
  margin: auto;
}

.contact-bg-1 {
  background-image: url(<%= image_path('contact-us/index/bg.png') %>);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  height: 0;
  padding-bottom: <%= 980.0 / 1920 * 100 %>%;
  position: relative;
}

.contact-bg-1-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.contact-bg-title-1 {
  font-size: 30px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20px;
}

.contact-bg-title-2 {
  font-size: 20px;
  white-space: pre-wrap;
  color: #fff;
  margin-bottom: 28%;
  text-align: center;
}



.contact-bg-2 {
  padding: 40px 0;
}

.contact-bg-string-1 {
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  color: #63c8f3;
}

.contact-bg-string-2:before {
  content: '';
  display: block;
  width: 50px;
  height: 2px;
  background: #484848;
  margin: 20px auto 20px;
}

.contact-bg-string-2 {
  font-size: 20px;
  text-align: center;
  margin-bottom: 30px;
  color: #484848;
}

.contact-item-title {
  color: #63c8f3;
  font-weight: bold;
  font-size: 24px;
  margin-bottom: 20px;
}

.contact-item-desc {
  color: #313131;
  font-size: 16px;
  margin-bottom: 50px;
}

.contact-item-badge {
  display: inline-block;
  border: 2px solid #dcdcdc;
  border-radius: 5px;
  font-size: 16px;
  padding: 3px 10px;
  margin-bottom: 20px;
}

.contact-item-list {
  padding: 0 16px;
  margin: 0;
  font-size: 14px;
}

.contact-item-list li + li {
  margin-top: 10px;
}

.contact-bg-2-wrapper {
  display: flex;
  height: 400px;
  border: 1px solid #4b5575;
}

.contact-bg-2-wrapper-2 {
  display: flex;
  flex-direction: column;
  flex: 0 0 60px;
}

.contact-bg-2-wrapper-2 label {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #4b5575;
  color: #828fbb;
  padding: 20px;
  text-align: center;
}

.contact-bg-2-wrapper-2 label + label {
  border-top: 1px solid #5d6583;
}

.contact-bg-2-wrapper-2 label[class] {
  cursor: pointer;
}

.contact-bg-2-wrapper-3 {
  display: none;
  flex: 1;
}

.contact-bg-2-wrapper-4 {
  display: none;
  flex: 1;
  padding: 30px 40px;
}

.contact-bg-2-wrapper-5 {
  display: flex;
  flex-wrap: wrap;
  flex: 0 0 500px;
  background-color: #303545;
  box-sizing: border-box;
}

.contact-bg-2-wrapper-5 label {
  flex: 0 0 25%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #8c97cb;
  border-right: 1px solid #4b5575;
  border-bottom: 1px solid #4b5575;
  box-sizing: border-box;
}

.contact-bg-2-wrapper-5 label:nth-child(4n) {
  border-right: 0;
}

.contact-bg-2-wrapper-5 label:nth-child(n + 5) {
  border-bottom: 0;
}

.contact-bg-2-wrapper-5 label[class] {
  cursor: pointer;
}

.contact-bg-2-wrapper-5 label:before {
  font-family: 'icons';
  display: block;
  font-size: 50px;
  margin-bottom: 10px;
}

.contact-radio {
  display: none;
}

<% items = t(:'contact_us.items', locale: :'zh-HK') %>
<% items.each.with_index do |item, i| %>
  #contact-2-<%= i %>:checked ~ .contact-bg-2-wrapper-3-<%= i %> {
    display: flex;
  }
  #contact-2-<%= i %>:checked ~ .contact-bg-2-wrapper-2 .contact-2-<%= i %> {
    background-color: #63c8f3;
    color: #fff;
  }

  <% item[:items].each.with_index do |slot, j| %>
    #contact-2-<%= i %>-<%= j %>:checked ~ .contact-bg-2-wrapper-3 .contact-bg-2-wrapper-4-<%= i %>-<%= j %> {
      display: block;
    }
    #contact-2-<%= i %>-<%= j %>:checked ~ .contact-bg-2-wrapper-3 .contact-2-<%= i %>-<%= j %> {
      color: #c7d7ef;
    }
  <% end %>
<% end %>

