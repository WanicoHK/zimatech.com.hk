.contact-bg-3 {
  background-image: url(<%= image_path('contact-us/index/bg-2.png') %>);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  height: 700px;
  box-sizing: border-box;
  padding: 40px 0;
}

.contact-bg-part-1 {
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  color: #fff;
}

.contact-bg-part-2:before {
  content: '';
  display: block;
  width: 50px;
  height: 2px;
  background: #fff;
  margin: 20px auto 20px;
}

.contact-bg-part-2 {
  font-size: 20px;
  text-align: center;
  margin-bottom: 30px;
  color: #fff;
}



.contact-bg-3-wrapper {
  display: flex;
  margin: -30px;
}

.contact-bg-3-wrapper-2 {
  flex: 1 1 0;
  background: #fff;
  padding: 30px;
  margin: 30px;
}

.contact-part-primary {
  color: #63c8f3;
  font-weight: bold;
  font-size: 24px;
  margin-bottom: 20px;
}

.contact-part-secondary {
  color: #000;
  font-size: 18px;
  margin-bottom: 10px;
}

.contact-part-text {
  color: #313131;
  font-size: 14px;
}

.contact-part-badge {
  display: inline-block;
  border: 1px solid #dcdcdc;
  border-radius: 8px;
  font-size: 16px;
  padding: 3px 10px;
  margin-bottom: 20px;
}

.contact-part-image {
  background-size: auto 220px;
  background-repeat: no-repeat;
  background-position: bottom;
  padding-bottom: 240px;
}

.contact-part-image-0 {
  background-image: url(<%= image_path('contact-us/index/part-1.png') %>);
  background-size: auto 200px;
}

.contact-part-image-1 {
  background-image: url(<%= image_path('contact-us/index/part-2.png') %>);
  background-size: auto 200px;
}

.contact-part-image-2 {
  background-image: url(<%= image_path('contact-us/index/part-3.png') %>);
  background-size: 300px auto;
  background-position: bottom 30px center;
}


.contact-bg-4 {
  padding: 40px 0;
}

.contact-points {
  display: flex;
  flex-wrap: wrap;
}

.contact-point {
  flex: 0 0 25%;
  padding: 40px;
  box-sizing: border-box;
  cursor: default;
}

.contact-point-title {
  font-size: 26px;
  font-weight: bold;
  color: #63c8f3;
  margin-bottom: 10px;
}

.contact-point-desc {
  font-size: 14px;
  color: #000;
  white-space: pre-wrap;
}

.contact-point:before {
  display: block;
  font-family: 'icons';
  font-size: 60px;
  color: #63c8f3;
  margin-bottom: 10px;
}

.contact-point-more {
  display: flex;
  align-items: center;
}

.contact-point-more:before {
  font-size: 16px;
  color: #000;
}

.contact-point-0:before { content: "\e657"; }
.contact-point-1:before { content: "\e65d"; }
.contact-point-2:before { content: "\e65c"; }
.contact-point-3:before { content: "\e659"; }
.contact-point-4:before { content: "\e658"; }
.contact-point-5:before { content: "\e65b"; }
.contact-point-6:before { content: "\e65a"; }

.contact-point-0:hover:before { content: "\e660"; }
.contact-point-1:hover:before { content: "\e661"; }
.contact-point-2:hover:before { content: "\e662"; }
.contact-point-3:hover:before { content: "\e664"; }
.contact-point-4:hover:before { content: "\e665"; }
.contact-point-5:hover:before { content: "\e663"; }
.contact-point-6:hover:before { content: "\e666"; }

.contact-point-more:before { content: "\e65e"; }
.contact-point-more:hover:before { content: "\e65f"; }


.contact-bg-5 {
  padding: 40px 0;
  height: 500px;
  box-sizing: border-box;
  background-image: url(<%= image_path('contact-us/index/bg-3.png') %>);
  background-repeat: no-repeat;
  background-position: center bottom;
  background-size: cover;
}

.contact-title {
  font-size: 30px;
  white-space: pre-wrap;
}

.contact-form {
  display: flex;
}

.contact-form-col {
  flex: 0 0 33.3333%;
  display: flex;
  flex-direction: column;
  padding: 20px;
  box-sizing: border-box;
}

.contact-control {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 46px;
  padding: 10px 12px;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
  color: #495057;
  background-color: #fff;
  border: 1px solid #ced4da;
  border-radius: 5px;
  appearance: none;
}

.contact-control + .contact-control {
  margin-top: 40px;
}

textarea.contact-control {
  flex: 1;
  resize: none;
}

.contact-submit {
  display: block;
  background: linear-gradient(270deg, #93b9ff, #40b6e6);
  border: 0;
  font-size: 18px;
  padding: 12px;
  color: #fff;
  border-radius: 5px;
  cursor: pointer;
}

.contact-submit:hover {
  background: #40b6e6;
}

.contact-submit:disabled {
  background: #ccc;
}

.contact-mobile-only {
  display: none;
}

.contact-pc-only {
  display: block;
}


@media (max-width: 767px) {
  .contact-bg-title-1 {
    font-size: 20px;
    margin-bottom: 10px;
  }

  .contact-bg-title-2 {
    font-size: 14px;
    margin-bottom: 18%;
  }


  .contact-bg-2-wrapper {
    height: auto;
    flex-direction: column;
  }

  .contact-bg-2-wrapper-2 {
    flex-direction: row;
    flex: 0 0 40px;
  }

  .contact-bg-2-wrapper-2 label {
    justify-content: center;
    font-size: 14px;
    padding: 10px;
  }

  .contact-bg-2-wrapper-2 label + label {
    border-top: 0;
  }

  .contact-bg-2-wrapper-3 {
    flex-direction: column;
  }

  .contact-bg-2-wrapper-4 {
    padding: 20px;
  }

  .contact-bg-2-wrapper-5 {
    flex: 0 0 160px;
  }

  .contact-bg-2-wrapper-5 label {
    height: 80px;
    font-size: 10px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }

  .contact-bg-2-wrapper-5 label:before {
    font-size: 36px;
    margin-bottom: 5px;
  }

  .contact-item-title {
    font-size: 20px;
    margin-bottom: 10px;
  }

  .contact-item-desc {
    font-size: 14px;
    margin-bottom: 20px;
  }

  .contact-item-badge {
    font-size: 12px;
    padding: 2px 6px;
  }

  .contact-item-list {
    font-size: 12px;
  }


  .contact-bg-3 {
    height: auto;
  }

  .contact-bg-3-wrapper {
    flex-direction: column;
    margin: -15px;
  }

  .contact-bg-3-wrapper-2 {
    margin: 15px;
  }

  .contact-part-image-2 {
    background-size: 250px auto;
  }


  .contact-point {
    flex: 0 0 50%;
    padding: 30px 15px;
  }

  .contact-point-title {
    font-size: 22px;
  }

  .contact-point-desc {
    font-size: 12px;
  }


  .contact-bg-5 {
    height: auto;
  }

  .contact-form {
    flex-direction: column;
  }

  .contact-form-col {
    padding-left: 0;
    padding-right: 0;
  }

  .contact-mobile-only {
    display: block;
  }

  .contact-pc-only {
    display: none;
  }
}
