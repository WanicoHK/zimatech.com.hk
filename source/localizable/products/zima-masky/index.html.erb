---
title_key: titles.masky
keywords_key: keywords.masky
description_key: descriptions.masky
---

<% content_for :assets do %>
  <%= stylesheet_link_tag 'products/zima-masky' %>
<% end %>

<div class="products-masky-bg-1">
  <div class="container">
    <div class="products-masky-content">
      <div class="products-masky-subtitle"><%= t(:'products.masky.subtitle') %></div>
      <div class="products-masky-title"><%= t(:'products.masky.title') %></div>
      <div class="products-masky-description"><%= t(:'products.masky.description') %></div>
      <div class="products-masky-features">
        <% (1..2).each do |i| %>
        <div class="products-masky-feature">
          <div class="products-masky-feature-icon"></div>
          <div class="products-masky-feature-content"><%= t(:"products.masky.feature_#{i}") %></div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="products-masky-image">
      <div class="products-masky-image-1"></div>
    </div>
  </div>
</div>

<div class="products-masky-bg-2">
  <div class="products-masky-bg-2-inner">
    <% (1..3).each do |col| %>
    <div class="products-masky-bg-2-col">
      <% ((col*2-1)..(col*2)).each do |i| %>
      <div class="products-masky-prop">
        <div class="products-masky-prop-icon products-masky-prop-icon-<%= i %>"></div>
        <div class="products-masky-prop-lines">
          <% t(:"products.masky.prop_#{i}").split('|').each do |line| %>
          <span class="products-masky-prop-line"><%= line %></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="products-masky-bg-3">
  <div class="container">
    <div class="products-masky-specs">
      <% (1..3).each do |i| %>
      <div class="products-masky-spec">
        <div class="products-masky-spec-icon products-masky-spec-icon-<%= i %>"></div>
        <div class="products-masky-spec-lines products-masky-spec-lines-<%= i %>">
          <% t(:"products.masky.spec_#{i}").split('|').each do |line| %>
          <span class="products-masky-spec-line"><%= line %></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="products-masky-bg-4">
  <div class="products-masky-bg-4-inner">
    <div class="products-masky-scenes">
      <div class="products-masky-scene products-masky-scene-1"></div>
      <div class="products-masky-scene products-masky-scene-2"></div>
    </div>
    <div class="products-masky-scenes">
      <div class="products-masky-scene products-masky-scene-3"></div>
      <div class="products-masky-scene-text">
        <% t(:"products.masky.scene_text").split('|').each do |line| %>
        <span class="products-masky-scene-text-line"><%= line %></span>
        <% end %>
      </div>
      <div class="products-masky-scene products-masky-scene-4"></div>
    </div>
    <div class="products-masky-scenes">
      <div class="products-masky-scene products-masky-scene-5"></div>
      <div class="products-masky-scene products-masky-scene-6"></div>
    </div>
  </div>
</div>

<div class="products-masky-bg-4-5">
  <div class="container">
    <div class="products-masky-type-title">
      <span><%= t(:'products.masky.type_title') %></span>
    </div>
  </div>
</div>

<div class="products-masky-bg-5">
  <div class="container">
    <div class="products-masky-types" >
      <% (1..3).each do |col| %>
      <div class="products-masky-types-col">
        <% ((col*2-1)..(col*2)).each do |i| %>
        <div class="products-masky-type">
          <div class="products-masky-type-icon products-masky-type-icon-<%= i %>"></div>
          <div class="products-masky-type-lines">
            <% t(:"products.masky.type_text_#{i}").split('|').each do |line| %>
            <span class="products-masky-type-line"><%= line %></span>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= link_to t(:'products.back'), '/products/', class: 'products-masky-back' %>
  </div>
</div>
