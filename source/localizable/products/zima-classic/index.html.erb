---
title_key: titles.classic
keywords_key: keywords.classic
description_key: descriptions.classic
---

<% content_for :assets do %>
  <%= stylesheet_link_tag 'products/zima-classic' %>
<% end %>

<div class="products-classic-bg-1">
  <div class="container">
    <div class="products-classic-content">
      <div class="products-classic-subtitle"><%= t(:'products.classic.subtitle') %></div>
      <div class="products-classic-title"><%= t(:'products.classic.title') %></div>
      <div class="products-classic-description"><%= t(:'products.classic.description') %></div>
      <div class="products-classic-features">
        <% (1..3).each do |i| %>
        <div class="products-classic-feature">
          <div class="products-classic-feature-icon products-classic-feature-icon-<%= i %>"></div>
          <div class="products-classic-feature-content products-classic-feature-content-<%= i %>"><%= t(:"products.classic.feature_#{i}") %></div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="products-classic-image">
      <div class="products-classic-image-1"></div>
    </div>
  </div>
</div>

<div class="products-classic-bg-2">
  <div class="products-classic-bg-2-inner">
    <% (1..3).each do |i| %>
    <div class="products-classic-prop">
      <div class="products-classic-prop-icon products-classic-prop-icon-<%= i %>"></div>
      <div class="products-classic-prop-lines">
        <% t(:"products.classic.prop_#{i}").split('|').each do |line| %>
        <span class="products-classic-prop-line"><%= line %></span>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="products-classic-bg-3">
  <div class="container">
    <% (1..2).each do |row| %>
    <div class="products-classic-specs products-classic-specs-row-<%= row %>">
      <% ((row*3-2)..(row*3)).each do |i| %>
      <div class="products-classic-spec">
        <div class="products-classic-spec-icon products-classic-spec-icon-<%= i %>"></div>
        <div class="products-classic-spec-lines">
          <% t(:"products.classic.spec_#{i}").split('|').each do |line| %>
          <span class="products-classic-spec-line"><%= line %></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="products-classic-bg-4">
  <div class="products-classic-bg-4-inner">
    <div class="products-classic-scenes">
      <div class="products-classic-scene products-classic-scene-1"></div>
      <div class="products-classic-scene products-classic-scene-2"></div>
    </div>
    <div class="products-classic-scenes">
      <div class="products-classic-scene products-classic-scene-3"></div>
      <div class="products-classic-scene-text">
        <% t(:"products.classic.scene_text").split('|').each do |line| %>
        <span class="products-classic-scene-text-line"><%= line %></span>
        <% end %>
      </div>
      <div class="products-classic-scene products-classic-scene-4"></div>
    </div>
    <div class="products-classic-scenes">
      <div class="products-classic-scene products-classic-scene-5"></div>
      <div class="products-classic-scene products-classic-scene-6"></div>
    </div>
  </div>
</div>

<div class="products-classic-bg-4-5">
  <div class="container">
    <div class="products-classic-type-title">
      <span><%= t(:'products.classic.type_title') %></span>
    </div>
  </div>
</div>

<div class="products-classic-bg-5">
  <div class="container">
    <div class="products-classic-types">
      <% (1..4).each do |i| %>
      <div class="products-classic-type">
        <div class="products-classic-type-icon products-classic-type-icon-<%= i %>"></div>
        <div class="products-classic-type-lines">
          <% t(:"products.classic.type_text_#{i}").split('|').each do |line| %>
          <span class="products-classic-type-line"><%= line %></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <%= link_to t(:'products.back'), '/products/', class: 'products-classic-back' %>
  </div>
</div>
